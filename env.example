# Environment Configuration Example
# Copy this file to .env and fill in your values

NODE_ENV=development

# Backend Configuration
JWT_SECRET=your-secret-key-change-in-production
SESSION_SECRET=your-session-secret
PORT=3001

# Frontend URLs
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Production URLs
PRODUCTION_API_URL=https://api.flexgenai.com
PRODUCTION_FRONTEND_URL=https://flexgenai.com

# OAuth Configuration (Get these from Google/Facebook Developer Console)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# OAuth Redirect URLs for Development
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback
FACEBOOK_CALLBACK_URL=http://localhost:3001/auth/facebook/callback

# OAuth Redirect URLs for Production  
PRODUCTION_GOOGLE_CALLBACK_URL=https://api.flexgenai.com/auth/google/callback
PRODUCTION_FACEBOOK_CALLBACK_URL=https://api.flexgenai.com/auth/facebook/callback 