# Threat Intelligence Platform - Environment Variables
# Copy this file to .env and fill in your values

# Flask Application Settings
SECRET_KEY=your_secure_random_key_here
FLASK_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=5000
THREAT_INTEL_PORT=5050
RUN_CRAWLERS_ON_START=true

# Database Settings
DATABASE_URL=sqlite:///threat_intel.db

# Crawler Settings - Global
ENABLE_ALL_CRAWLERS=true  # Set to false to use individual settings

# AlienVault OTX Settings
ENABLE_ALIENVAULT_CRAWLER=true
ALIENVAULT_API_KEY=61b8bc7b26584345ce93d6ac72ce015ec6c37e9f1ae37fc99ba2951acbdea1a2
ALIENVAULT_EMAIL=vedprakash150788@gmail.com
ALIENVAULT_FREQUENCY=0 */6 * * *  # Every 6 hours (crontab syntax)
ALIENVAULT_HOURS_BACK=24

# Abuse.ch Settings
ENABLE_ABUSECH_CRAWLER=true
ABUSECH_FREQUENCY=0 */6 * * *  # Every 6 hours (crontab syntax)

# MalwareBazaar Settings
ENABLE_MALWAREBAZAAR_CRAWLER=true
MALWAREBAZAAR_FREQUENCY=0 */12 * * *  # Every 12 hours (crontab syntax)

# ThreatFox Settings
ENABLE_THREATFOX_CRAWLER=true
THREATFOX_FREQUENCY=0 */8 * * *  # Every 8 hours (crontab syntax)
THREATFOX_DAYS=1

# Pastebin Settings - Requires API key
ENABLE_PASTEBIN_CRAWLER=false
PASTEBIN_API_KEY=your_pastebin_api_key
PASTEBIN_FREQUENCY=0 */4 * * *  # Every 4 hours (crontab syntax)

# Reddit Settings - Requires API credentials
ENABLE_REDDIT_CRAWLER=false
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ThreatIntelligencePlatform/1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_FREQUENCY=0 */12 * * *  # Every 12 hours (crontab syntax)
REDDIT_SUBREDDITS=cybersecurity,netsec,malware,InfoSecNews,hacking

