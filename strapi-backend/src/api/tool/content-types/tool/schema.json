{
	"kind": "collectionType",
	"collectionName": "tools",
	"info": {
		"singularName": "tool",
		"pluralName": "tools",
		"displayName": "Tool",
		"description": "FlexGen.ai tools and offerings"
	},
	"options": {
		"draftAndPublish": true
	},
	"pluginOptions": {},
	"attributes": {
		"name": {
			"type": "string",
			"required": true,
			"unique": true
		},
		"slug": {
			"type": "uid",
			"targetField": "name",
			"required": true
		},
		"description": {
			"type": "text",
			"required": true
		},
		"category": {
			"type": "string",
			"required": true
		},
		"status": {
			"type": "enumeration",
			"enum": ["available", "coming-soon", "beta"],
			"default": "coming-soon",
			"required": true
		},
		"icon": {
			"type": "string"
		},
		"image": {
			"allowedTypes": ["images"],
			"type": "media",
			"multiple": false
		},
		"features": {
			"type": "component",
			"repeatable": true,
			"component": "blocks.feature"
		},
		"documentation": {
			"type": "richtext"
		},
		"demoUrl": {
			"type": "string"
		}
	}
}
